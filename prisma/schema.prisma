generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id       String @id @default(uuid())
    email    String @unique
    password String

    tasks Task[]

    @@map("users")
}

model Task {
    id          Int    @id @default(autoincrement())
    description String
    userId String @map("user_id")

    user        User   @relation(fields:[userId],references: [id], onDelete: Cascade )

    @@unique([userId])
    
    @@map("tasks")
}
