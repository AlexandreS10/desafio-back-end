generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Task {
    id          String   @id @default(uuid())
    title       String
    description String
    createdAt   DateTime @default(now()) @map("created_at")

    @@unique([id])
    @@map("tasks")
}
